<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>
    <h2>トピックを編集する</h2>
    <%= form_for(@topic) do |f| %>
      <% if @topic.errors.any? %>
        <div id="error_explanation">
          <h3><%= @topic.errors.count %>件のエラーがあります。</h3>
          <ul>
          <% @topic.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <p><%= f.text_field :content, class: 'form-control'%></p>
      <p><%= f.submit '編集', class: 'btn btn-primary btn-block'%></p>
    <% end %>
    <p class="center back">
      <%= link_to 'トピック一覧へ戻る', topics_path %>
    </p>
  </div>
</div>
