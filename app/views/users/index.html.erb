<div class="container">
  <h1>ユーザー一覧</h1>
  <div class="profile">
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div class="container-child col-md-3 col-sm-4 col-xs-6 ">
          <%= profile_img(user) %>
            <ul>
              <li>
                <div class="item">
                  <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
                </div>
                <%= user.email %>
                <%= render 'follow_form', user: user %>
              </li>
            </ul>
        </div>
        <% end %>
      <% end %>
   </div>
</div>
