<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "メールアドレス" %><br>
      </div>

      <!-- 名前入力用のフィールドを追加 -->
      <div class="field">
        <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
        <br>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(最低 <%= @minimum_password_length %>文字)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "パスワード" %>
        <br>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "もう一度パスワードを入力してください" %>
      </div>
      <br/>

      <div class="actions">
        <%= f.submit "サインアップ", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
